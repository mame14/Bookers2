
<%= flash[:notice] %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>can't be blank error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container pt-3 pb5">
 <div class="row">
  <div class="col-lg-5 mx-auto">
  <%= form_with model: @book do |f| %>
  <h1>Editing Book</h1>
  <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <p>Opinion</p>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book',class: "btn btn-success" %>

<% end %>